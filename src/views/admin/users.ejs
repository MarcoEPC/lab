<%- include('../../partials/header.ejs') %>

<body class="flex-1 bg-gray-50">
    <div class="flex h-screen">
        <%- include('../../partials/menuAdmin.ejs') %>
        <main class="flex-1 flex flex-col ml-60"> 
            <%- include('../../partials/barra.ejs') %>
            <div class="flex-1 px-6 py-4">
                <div class="flex bg-neutral-100 mb-4 p-4 shadow rounded-lg">
                    <span class="font-bold uppercase text-gray-500 text-sm">Utilizadores</span>
                    <span class="font-serif text-gray-400 text-sm">&nbsp; | Gestão </span>
                </div>
                <div class="flex md:justify-end justify-start mb-6">
                    <button id="openCreateUserModal" class="px-2 py-2 w-32 text-center bg-indigo-800 rounded shadow text-neutral-200 hover:bg-indigo-600 text-sm font-bold cursor-pointer">Novo Utilizador</button>
                </div>
                <div class="relative overflow-x-auto shadow-md rounded-lg max-h-96">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-indigo-600 text-neutral-200 sticky top-0">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">ID</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Nome</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Email</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Posição</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Ações</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr class="hover:bg-gray-100 transition duration-150">
                                <td class="px-6 py-4 whitespace-nowrap text-sm">1</td>
                                <td class="px-6 py-4 whitespace-nowrap flex items-center text-sm">
                                    <img class="h-8 w-8 rounded-full object-cover mr-2" src="path_to_image" alt="Profile">
                                    <p>Marco Silva</p>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">marcosilva@epcarvalhais.org</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">Front-end developer</td>
                                <td class="px-6 py-4 whitespace-nowrap flex space-x-2">
                                    <button id="openEditUserModal" title="Editar" class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-500 text-xs font-semibold">
                                        Edit user
                                    </button>
                                    <button id="openDeleteUserModal" class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-500 text-xs font-semibold">
                                        Delete user
                                    </button>
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
    <div id="myModal" class="modal fixed top-0 left-0 w-full h-full flex items-center justify-center bg-black bg-opacity-50 opacity-0 pointer-events-none transition-opacity duration-300">
        <div class="bg-white rounded-lg shadow-lg w-1/2 p-6 relative">
            <span id="closeModal" class="absolute top-0 right-0 mt-4 mr-4 bg-slate-400 p-2 text-gray-500 cursor-pointer">&times;</span>
            <h2 id="modalTitle" class="text-2xl mb-4">Title</h2>
            <div id="modalContent">Content goes here</div>
        </div>
    </div>
    
    <%- include('../../partials/footerAdmin.ejs') %>
</body>
