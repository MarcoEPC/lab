<%- include('../../partials/header.ejs') %>

    <body>
        <div class="w-full h-screen flex">
            <%- include('../../partials/menuAdmin.ejs') %>
                <main class="w-4/5">
                    <%- include('../../partials/barra.ejs') %>
                        <div class="flex md:flex-row flex-col p-4">
                            <div class="flex md:flex-row flex-col">
                                <span class="font-bold uppercase text-gray-400 pr-2">Bolsas </span>
                                <span class="text-gray-400"> # Inserir </span>
                            </div>
                            <div class="p-10">
                                <form action="" method="post">
                                    <div class="flex md:flex-row flex-col gap-4">
                                        <div class="md:w-1/2 w-full">
                                            <div class="flex flex-col">
                                                <label for="titulo" class="text-gray-400 py-2">Título</label>
                                                <textarea name="titulo"
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="descricao" class="text-gray-400 py-2">Descrição</label>
                                                <textarea name="descricao"
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="area" class="text-gray-400 py-2">Área de Atuação</label>
                                                <textarea name="area" class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="objetivo" class="text-gray-400 py-2">Objetivo do
                                                    projeto</label>
                                                <textarea name="objetivo"
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="plano" class="text-gray-400 py-2">Plano de trabalho</label>
                                                <textarea name="plano" class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="local" class="text-gray-400 py-2">Local de trabalho</label>
                                                <textarea name="local" class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="duracao" class="text-gray-400 py-2">Duração e regime de
                                                    trabalho</label>
                                                <textarea name="duracao"
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                        </div>
                                        <div class="md:w-1/2 w-full">
                                            <div class="flex flex-col">
                                                <label for="condicoes" class="text-gray-400 py-2">Condições da
                                                    bolsa</label>
                                                <textarea name="condicoes"
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="criterios" class="text-gray-400 py-2">Critérios de avaliação
                                                    e
                                                    formalização
                                                    da candidatura</label>
                                                <textarea name="criterios"
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="composicao" class="text-gray-400 py-2">Composição do júri de
                                                    seleção</label>
                                                <textarea name="composicao"
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="prazo" class="text-gray-400 py-2">Prazo e receção de
                                                    candidaturas</label>
                                                <textarea name="prazo" class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="resultados"
                                                    class="text-gray-400 py-2">Publicação/notificação dos
                                                    resultados</label>
                                                <textarea name="resultados" rows=4
                                                    class="border-b-2 focus:outline-none"></textarea>
                                            </div>
                                            <div class="flex flex-col">
                                                <label for="imagem" class="text-gray-400 py-2">Imagem</label>
                                                <input type="file" name="imagem" class="border-b-2 focus:outline-none">
                                            </div>
                                            <div class="pt-4">
                                                <input type="submit" name="criar" value="Criar Utilizador"
                                                    class="w-full mt-2 bg-gray-800 hover:bg-gray-600 px-4 py-2 rounded-xl shadow-xl text-gray-100 cursor-pointer">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                </main>
        </div>
    </body>

    </html>