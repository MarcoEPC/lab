<%- include('../../partials/header.ejs') %>

    <body class="flex-1">
        <div class="flex h-screen">
            <%- include('../../partials/menuAdmin.ejs') %>
                <main class="flex-1">
                    <%- include('../../partials/barra.ejs') %>
                        <div class="px-4 py-2">
                            <div class="flex bg-neutral-100 mb-4 p-2 shadow">
                                <span class="font-bold uppercase text-indigo-600 text-sm"><a
                                        href="/admin/projetos">Projetos</a></span>
                                <span class="font-serif text-gray-400 text-sm"> &nbsp; | Editar </span>
                            </div>
                            <form action="" method="post" class="md:w-1/2 w-full">
                                <div class="flex flex-col">
                                    <label for="titulo" class="text-neutral-500 py-2 text-sm">Título</label>
                                    <input type="text" name="titulo" autofocus class="border-b-2 focus:outline-none"
                                        maxlength="100">
                                </div>
                                <div class="flex flex-col">
                                    <label for="autor" class="text-neutral-500 py-2 text-sm">Autor</label>
                                    <input type="text" name="autor" required class="border-b-2 focus:outline-none"
                                        maxlength="100">
                                </div>
                                <div class="flex flex-col">
                                    <label for="descricao" class="text-neutral-500 py-2 text-sm">Descrição</label>
                                    <textarea name="descricao" class="border-b-2 focus:outline-none"
                                        maxlenght="300"></textarea>
                                </div>
                                <div>
                                    <label for="categorias" class="text-neutral-500 py-2 text-sm">Categorias</label>

                                </div>
                                <div>
                                    <input type="submit" name="criar" value="Guardar Projeto"
                                        class="w-36 mt-10 px-2 py-2 bg-orange-600 rounded shadow text-neutral-200 hover:bg-orange-400 text-sm font-bold cursor-pointer">
                                </div>
                            </form>
                        </div>
                </main>
        </div>
        <%- include('../../partials/footerAdmin.ejs') %>