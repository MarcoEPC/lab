<%- include('../../partials/header.ejs') %>

    <body class="flex-1">
        <div class="flex h-screen">
            <%- include('../../partials/menuAdmin.ejs') %>
                <main class="flex-1 flex flex-col">
                    <%- include('../../partials/barra.ejs') %>
                        <div class="flex-1 p-6">
                            <form action="" method="post" class="w-1/2">
                                <div class="flex flex-col">
                                    <label for="nome" class="text-neutral-500 py-2">Nome</label>
                                    <input type="text" name="nome" autofocus class="border-b-2 focus:outline-none">
                                </div>
                                <div class="flex flex-col">
                                    <label for="email" class="text-neutral-500 py-2">Email</label>
                                    <input type="email" name="email" required class="border-b-2 focus:outline-none">
                                </div>
                                <div class="flex flex-col">
                                    <label for="password" class="text-neutral-500 py-2">Palavra-Passe:</label>
                                    <input type="password" name="password" required
                                        class="border-b-2 focus:outline-none">
                                </div>
                                <div class="flex flex-col">
                                    <label for="cpassword" class="text-neutral-500 py-2">Confirmar
                                        Palavra-Passe:</label>
                                    <input type="password" name="cpassword" required
                                        class="border-b-2 focus:outline-none">
                                </div>
                                <div>
                                    <input type="submit" name="criar" value="Inserir Projeto"
                                        class="w-full mt-2 bg-neutral-800 hover:bg-neutral-600 px-4 py-2 rounded-xl shadow-xl text-gray-100 cursor-pointer">
                                </div>
                            </form>
                        </div>
                </main>
        </div>
        <%- include('../../partials/footerAdmin.ejs') %>